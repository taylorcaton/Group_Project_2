<div class="container">
  <div class="row">
    <div class="col-sm-12">

      <div class="card">
        <div class="card-block text-xs-left">
          <h4 class="card-title">Quiz Demo</h4>
          <div class="form-group">
            <label for="numberOfQuestions">How Many Questions?</label>
            <select class="form-control" name="numberOfQuestions" id="numberOfQuestions">
              <option>1</option>
              <option>5</option>
              <option>10</option>
              <option>15</option>
            </select>
          </div>
          <div class="form-group">
            <label for="category">Which Category?</label>
            <select class="form-control" name="category" id="category">
              <option>General Knowledge</option>
              <option>Entertainment: Film</option>
              <option>Entertainment: Music</option>
            </select>
          </div>
          <a href="/question"><button id="startGame" type="button" class="btn btn-primary">Start Game</button></a>
        </div>
      </div>

      <div class="card">
        <div class="card-block text-xs-left">
          <h4 class="card-title">Players</h4>
          <div id="playerBox">

          </div>
        </div>
      </div>

    </div>
  </div>
</div>